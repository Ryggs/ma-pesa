<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    dark theme-->
    <!-- Base application theme. -->


    <!--no action bar
    -->


    <!--Style for Splash Screen-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Basic styling for the money. -->
    <style name="style_btn">
        <item name="android:background">@drawable/btnbg</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="color">#9345E1</item>
        <item name="fontFamily">@font/qsm</item>
        <item name="android:textColor">@color/white</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="paddingStart">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <!-- styles.xml -->
    <style name="get_free_ai">

        <item name="android:textSize">
            50sp
        </item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/qsr</item>

        <item name="android:textColor">
            #000000
        </item>

    </style>

</resources>
