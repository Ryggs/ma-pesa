<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AirtimeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:lineHeight="22sp"
                android:fontFamily="@font/qsb"
                android:id="@+id/click_and_w"
                android:layout_width="273dp"
                android:layout_height="23dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="67dp"
                android:gravity="top"
                android:text="@string/click_and_w"
                android:textAppearance="@style/click_and_w"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/maincard"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                app:elevation="9dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/click_and_w">

                <ImageView
                    android:id="@+id/play"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="115dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/play_ad" />

            <ImageButton
                android:id="@+id/video"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_watch"
                app:layout_constraintEnd_toEndOf="@+id/logout"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/text4"
                app:layout_constraintTop_toBottomOf="@+id/text4" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/videos"
                android:layout_width="143dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="197dp"
                android:gravity="top"
                android:text="@string/videos_to_g_one"
                android:textAppearance="@style/click_and_w"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="true"
                android:max="100"
                android:progress="10"
                android:secondaryProgress="25"
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="@+id/video"
                app:layout_constraintHorizontal_bias="0.554"
                app:layout_constraintStart_toStartOf="@+id/video"
                app:layout_constraintTop_toBottomOf="@+id/video" />

            <Button
                android:id="@+id/button7"
                style="@style/amountButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="244dp"
                android:padding="16dp"
                android:text="START AGAIN"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/video"
                app:layout_constraintHorizontal_bias="0.56"
                app:layout_constraintStart_toStartOf="@+id/video" />

            <TextView
                android:id="@+id/goback"
                android:layout_width="255dp"
                android:layout_height="108dp"
                android:layout_marginBottom="112dp"
                android:gravity="center"
                android:text="Watch video FULLY to continue ..."
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/video"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@+id/video" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>