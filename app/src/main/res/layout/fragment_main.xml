<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainFragment">

        <ScrollView
            android:background="@color/bckgrd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/bckgrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textFontWeight="500"
                    android:fontFamily="@font/qsb"
                    android:textColor="@color/btn"
                    android:id="@+id/ma_pesa"
                    android:layout_width="103dp"
                    android:layout_height="31dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="128dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="129dp"
                    android:gravity="top"
                    android:text="@string/ma_pesa"
                    android:textAppearance="@style/ma_pesa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/fifity"
                    android:layout_width="320dp"
                    android:layout_height="140dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/maincard"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true"
                    app:elevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ma_pesa">


                    <TextView
                        android:id="@+id/watchfour"
                        android:layout_width="103dp"
                        android:layout_height="58dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="top"
                        android:textAppearance="@style/watch_4_vid" />

                    <Button
                        android:layout_height="25dp"
                        android:id="@+id/fiftyBtn"
                        style="@style/start"
                        android:background="@drawable/start"
                        android:layout_width="120dp"
                        android:layout_marginStart="92dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginEnd="108dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="4dp"
                        android:text="@string/start" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="140dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/maincard"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true"
                    app:elevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fifity">


                    <TextView
                        android:id="@+id/watchnine"
                        android:layout_width="132dp"
                        android:layout_height="62dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="top"
                        android:textAppearance="@style/watch_4_vid" />

                    <Button
                        android:layout_height="25dp"
                        android:id="@+id/onehundredBtn"
                        style="@style/start"
                        android:background="@drawable/start"
                        android:layout_width="120dp"
                        android:layout_marginStart="92dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginEnd="108dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="4dp"
                        android:text="@string/start" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </FrameLayout>
</layout>