<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainFragment">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titleIntro"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="FREE AIRTIME"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/fifty"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/fifty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="32dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/titleIntro"
                    app:layout_constraintStart_toStartOf="@+id/titleIntro"
                    app:layout_constraintTop_toBottomOf="@+id/titleIntro">

                    <LinearLayout
                        android:background="@drawable/customborder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.AppCompat"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Watch 4 vidoes for 50Shs"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/fiftyBtn"
                            style="@style/amountButtons"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="START" />



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hundred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="32dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/fifty"
                    app:layout_constraintStart_toStartOf="@+id/fifty"
                    app:layout_constraintTop_toBottomOf="@+id/fifty">

                    <LinearLayout
                        android:background="@drawable/customborder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.AppCompat"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Watch 10 short vidoes for 100Shs \n coming  soon."
                            android:textSize="24sp" />

                        <Button
                            android:enabled="false"
                            android:id="@+id/hundredBtn"
                            style="@style/amountButtons"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="START" />



                    </LinearLayout>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </FrameLayout>
</layout>